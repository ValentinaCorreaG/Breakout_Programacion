import pygame
from pygame.locals import *

pygame.init()

eje_x = 800
eje_y = 800

ventana = pygame.display.set_mode((eje_x, eje_y))
pygame.display.set_caption('Breaking Meta Space')


color_fondo = (0,0,0)
nivel1 = (39, 174, 96)
nivel2 = (243, 156, 18)
nivel3 = (231, 76, 60)

#define game variables
columnas = 6
filas = 5



#brick wall class
class Obstaculos():
    def __init__(self):
        self.x = eje_x // columnas
        self.y = 55

    def crear_obstaculos(self):
        self.bloques = []
        #define an empty list for an individual block
        cada_bloque = []
        for fila in range(filas):
            #reset the block row list
            linea_bloques = []
            #iterate through each column in that row
            for columna in range(columnas):
                #generate x and y positions for each block and create a rectangle from that
                bloques_x = columna * self.x
                bloques_y = fila * self.y
                rect = pygame.Rect(bloques_x, bloques_y, self.x, self.y)
                #assign block strength based on row
                if fila <= 1:
                    valor = 3
                elif fila <= 3:
                    valor = 2
                elif fila <= 5:
                    valor = 1
                #create a list at this point to store the rect and colour data
                cada_bloque = [rect, valor]
                #append that individual block to the block row
                linea_bloques.append(cada_bloque)
            #append the row to the full list of blocks
            self.bloques.append(linea_bloques)


    def dibujar_obstaculos(self):
        for fila in self.bloques:
            for bloque in fila:
                #assign a colour based on block strength
                if bloque [1] == 3:
                    nivel_bloque = nivel3
                elif bloque[1] == 2:
                    nivel_bloque = nivel2
                elif bloque[1] == 1:
                    nivel_bloque = nivel1
                pygame.draw.rect(ventana, nivel_bloque , bloque [0])
                pygame.draw.rect(ventana, color_fondo, (bloque [0]), 2)



#create a wall
tablero = Obstaculos()
tablero.crear_obstaculos()



run = True
while run:

    ventana.fill(color_fondo)

    #draw wall
    tablero.dibujar_obstaculos()


    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            run = False


    pygame.display.update()

pygame.quit()

